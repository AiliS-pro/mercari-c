<h2>本人認証</h2>

<%= form_for @personal_righting do |f| %>
  <%= render "devise/shared/error_messages", resource: @personal_righting %>

  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :firstname_hiragana %><br />
    <%= f.text_field :firstname_hiragana %>
  </div>

  <div class="field">
    <%= f.label :lastname_hiragana %><br />
    <%= f.text_field :lastname_hiragana %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.text_field :birthday %>
  </div>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>