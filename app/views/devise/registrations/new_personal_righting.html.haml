%h2 本人認証
= form_for @personal_righting do |f|
  = render "devise/shared/error_messages", resource: @personal_righting
  .field
    = f.label :firstname
    %br/
    = f.text_field :firstname
  .field
    = f.label :lastname
    %br/
    = f.text_field :lastname
  .field
    = f.label :firstname_hiragana
    %br/
    = f.text_field :firstname_hiragana
  .field
    = f.label :lastname_hiragana
    %br/
    = f.text_field :lastname_hiragana
  .field
    = f.label :birthday
    %br/
    = f.text_field :birthday
  .actions
    = f.submit "Next"
= render "devise/shared/links"
