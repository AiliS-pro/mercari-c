%header
  .header-inner
    .mainheader
      .logo-box
        = link_to image_tag("logo.png",class: "logo")
      .search
        = form_with do |f|
          .search-box
            = f.text_field :keyword, class: "search-box__input"
            .search-box__submit
              = f.label :image do
                = image_submit_tag("icon-search 1.png", class: "search-box__submit__icon")
            
              
    .nav
      .list-left
        .list-left__category
          = link_to do
            カテゴリー
        .list-left__brand
          = link_to do
            ブランド
      .list-right
        .list-right__login
          = link_to do
            ログイン
        .list-right__signup
          = link_to do
            新規会員登録